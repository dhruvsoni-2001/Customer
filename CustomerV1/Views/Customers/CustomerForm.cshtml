@model CustomerV1.ViewModels.CustomerFormViewModel
@{
    ViewBag.Title = "CustomerForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

@using (Html.BeginForm("Save", "Customers"))
{
    @Html.ValidationSummary(true, "Please fix the following errors.")

    <div class="form-group pb-3">
        @Html.LabelFor(m => m.Customer.Name)
        @Html.TextBoxFor(m => m.Customer.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Customer.Name , "", new { @class = "text-danger" })
    </div>
    <div class="form-group pb-3">
        @Html.LabelFor(m => m.Customer.Email)
        @Html.TextBoxFor(m => m.Customer.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Customer.Email, "", new { @class = "text-danger" })
    </div>
    <div class="form-group pb-3">
        @Html.LabelFor(m => m.Customer.Phone)
        @Html.TextBoxFor(m => m.Customer.Phone, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Customer.Phone, "", new { @class = "text-danger" })
    </div>

    @Html.HiddenFor(m => m.Customer.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary ">Save</button>
    @Html.ActionLink("Cancel", "Index", "Customers", new { @class = "btn btn-success" })
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}